{
  "name": "@deepgram/sdk",
  "version": "1.4.2",
  "description": "An SDK for the Deepgram automated speech recognition platform",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "npm run build:lib && webpack --config webpack.config.js && npm run bundle",
    "build:lib": "tsc --project ./tsconfig.json && tsc --project ./tsconfig-es6.json",
    "coverage": "nyc npm run test",
    "lint": "eslint ./src --ext .ts && prettier --config .prettierrc src/*.ts src/**/*.ts --write",
    "test": "mocha -r ts-node/register tests/*test.ts tests/**/*test.ts --insect",
    "watch": "nodemon -e ts --watch src --exec \"npm run build\"",
    "bundle": "dts-generator --project ./ --out dist/index.d.ts"
  },
  "exports": {
    ".": "./dist/index.js",
    "./browser": {
      "default": "./dist/browser/index.js"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/deepgram/deepgram-node-sdk.git"
  },
  "keywords": [
    "deepgram",
    "asr",
    "speech",
    "sdk"
  ],
  "author": {
    "name": "Michael Jolley",
    "email": "michael.jolley@deepgram.com"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/deepgram/deepgram-node-sdk/issues"
  },
  "homepage": "https://github.com/deepgram/deepgram-node-sdk#readme",
  "devDependencies": {
    "@types/chai": "^4.2.22",
    "@types/mocha": "^9.0.0",
    "@types/node": "^14.17.32",
    "@types/sinon": "^10.0.6",
    "@types/ws": "^7.4.7",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "browserify": "^17.0.0",
    "chai": "^4.3.4",
    "eslint": "^7.32.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-import": "^2.25.2",
    "mocha": "^9.1.3",
    "nock": "^13.1.4",
    "nodemon": "^2.0.14",
    "nyc": "^15.1.0",
    "prettier": "^2.4.1",
    "sinon": "^10.0.0",
    "ts-node": "^9.1.1",
    "typescript": "^4.6.3",
    "webpack": "^5.72.0",
    "webpack-cli": "^4.9.2"
  },
  "dependencies": {
    "bufferutil": "^4.0.6",
    "dts-generator": "^3.0.0",
    "utf-8-validate": "^5.0.9",
    "ws": "^7.5.5"
  }
}
