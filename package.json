{
  "name": "@deepgram/deepgram-js-sdk-monorepo",
  "version": "0.0.0",
  "private": true,
  "description": "Deepgram JavaScript SDK Monorepo",
  "packageManager": "pnpm@10.12.1",
  "homepage": "https://github.com/deepgram/deepgram-js-sdk",
  "bugs": "https://github.com/deepgram/deepgram-js-sdk/issues",
  "license": "MIT",
  "author": {
    "name": "Deepgram DevRel Team",
    "email": "devrel@deepgram.com"
  },
  "contributors": [
    "Brian Barrow",
    "Brian Hillis",
    "Luke Oliff",
    "Michael Jolley",
    "Sandra Rodgers",
    "Shir Goldberg"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/deepgram/deepgram-js-sdk.git"
  },
  "scripts": {
    "build": "nx run-many -t build",
    "test": "nx run-many -t test",
    "lint": "run-s lint:*",
    "lint:js": "eslint -c .eslintrc-examples.js examples --max-warnings 0",
    "lint:md": "markdownlint **/*.md *.md",
    "lint:yml": "yamllint .github/workflows",
    "lint:packages": "nx run-many -t lint",
    "format": "prettier --write \"packages/**/*.ts\"",
    "docs": "typedoc --entryPoints packages/core/src/index.ts --out docs/ --includes packages/core/src/packages/**/*.ts --emit none",
    "docs:json": "typedoc --entryPoints packages/core/src/index.ts --includes packages/core/src/packages/**/*.ts --json docs/spec.json --emit none",
    "clean": "nx run-many -t clean && rimraf docs/v2"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.6.7",
    "@commitlint/config-conventional": "^17.6.7",
    "@nx/jest": "^21.4.0",
    "@nx/js": "^21.4.0",
    "@nx/webpack": "^21.4.0",
    "@types/jest": "^29.5.12",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^8.7.0",
    "@typescript-eslint/parser": "^8.7.0",
    "buffer": "^6.0.3",
    "cross-env": "^7.0.3",
    "dotenv": "^16.5.0",
    "eslint": "^8.57.1",
    "husky": "^4.3.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "markdownlint": "^0.35.0",
    "markdownlint-cli": "^0.42.0",
    "nodemon": "^3.0.1",
    "npm-run-all": "^4.1.5",
    "nx": "^21.4.0",
    "prettier": "^2.5.1",
    "pretty-quick": "^3.1.3",
    "release-please": "^17.1.1",
    "rimraf": "^3.0.2",
    "stream-browserify": "^3.0.0",
    "ts-jest": "^29.1.2",
    "ts-loader": "^8.0.11",
    "ts-node": "^10.9.1",
    "typedoc": "^0.22.16",
    "typescript": "^4.5.5",
    "url": "^0.11.4",
    "util": "^0.12.5",
    "webpack": "^5.69.1",
    "webpack-cli": "^4.9.2",
    "yaml-lint": "^1.7.0"
  },
  "overrides": {
    "es5-ext": "0.10.53"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
