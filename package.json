{
  "name": "@deepgram/sdk",
  "version": "1.0.0",
  "description": "An SDK for the Deepgram automated speech recognition platform",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc -p ./",
    "coverage": "nyc npm run test",
    "lint": "eslint ./src --ext .ts && prettier --config .prettierrc src/**/*.ts --write",
    "test": "mocha -r ts-node/register tests/**/*test.ts --insect",
    "watch": "nodemon -e ts --watch src --exec \"npm run build\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/deepgram/node-sdk.git"
  },
  "keywords": [
    "deepgram",
    "asr",
    "speech",
    "sdk"
  ],
  "author": {
    "name": "Michael Jolley",
    "email": "michael.jolley@deepgram.com"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/deepgram/node-sdk/issues"
  },
  "homepage": "https://github.com/deepgram/node-sdk#readme",
  "devDependencies": {
    "@types/chai": "^4.2.16",
    "@types/mocha": "^8.2.2",
    "@types/node": "^14.17.4",
    "@types/sinon": "^10.0.0",
    "@types/ws": "^7.4.4",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "chai": "^4.3.4",
    "eslint": "^7.2.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-import": "^2.22.1",
    "mocha": "^8.3.2",
    "nock": "^13.0.11",
    "nodemon": "^2.0.7",
    "nyc": "^15.1.0",
    "prettier": "^2.2.1",
    "sinon": "^10.0.0",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.4"
  },
  "dependencies": {
    "ws": "^7.4.6"
  }
}