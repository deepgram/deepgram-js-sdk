{
  "include": ["src", "test"],
  "exclude": ["node_modules/**/*.ts", "**/*.test.ts"],
  "compilerOptions": {
    "module": "CommonJS",
    "outDir": "testServer",
    "target": "ES2015",
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "forceConsistentCasingInFileNames": true,
    "stripInternal": true,
    "allowSyntheticDefaultImports": true
  }
}
